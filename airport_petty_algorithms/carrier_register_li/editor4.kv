<SoundButtonCard@BoxLayout>:

    id: sound_button
    orientation: 'horizontal'

    padding: dp(5)
    spacing: dp(10)
    # top: 0.1
    # center_x: 0.03
    size_hint_x: 0.0
    size_hint_y: 0.25
    # pos: (10.0, 10.0)
    size: (50, 50)
    # size_hint: (.10, .20)
    # icon_size: "64sp"
    # height: self.minimum_height

    MDIconButton:
        icon: "/media/netunit/storage/SoftServeItAcademy/airport_petty_algorithms/carrier_register_li/volume-speaker-icon-on.jpg"
        theme_icon_color: "Custom"
        icon_color: app.theme_cls.primary_color
        icon_size: "64sp"
        # text: "Play",
        # size_hint: (2, 2)
        # size_hint_y: -0.25
        # pos_hint: {'center_x': .0, 'center_y': .90}
        on_press: sound_button.playaudio()

    MDIconButton:
        icon: "/media/netunit/storage/SoftServeItAcademy/airport_petty_algorithms/carrier_register_li/volume-speaker-icon-off.jpg"
        theme_icon_color: "Custom"
        icon_color: app.theme_cls.primary_color
        icon_size: "64sp"
        # text: "Play",
        # size_hint: (2, 2)
        # pos_hint: {'center_x': .50, 'center_y': .90}
        on_press: sound_button.stopaudio()

